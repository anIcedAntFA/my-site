{
	"name": "my-site",
	"type": "module",
	"version": "0.0.1",
	"scripts": {
		"dev": "astro dev",
		"build": "astro build",
		"preview": "astro build && wrangler pages dev",
		"astro": "astro",
		"deploy": "astro build && wrangler pages deploy",
		"cf-typegen": "wrangler types",
		"check:types": "astro check",
		"check:circular-deps": "dpdm './src/**/*.{ts,tsx,js,jsx,md,mdx}' --exit-code circular:1 --no-tree --no-warning",
		"format": "bun run format:code && bun run format:imports",
		"format:code": "biome format --write",
		"format:imports": "biome check --formatter-enabled=false --write",
		"lint": "biome lint .",
		"lint:fix": "biome lint --write --unsafe .",
		"panda:gen": "panda codegen",
		"panda:jsx": "panda codegen --clean",
		"panda:studio": "panda studio",
		"panda:spec": "panda spec",
		"check:all": "bun run format && bun run lint && bun run check:types && bun run check:circular-deps",
		"ci:quality": "bunx biome ci --formatter-enabled=true --linter-enabled=true && bun run check:circular-deps",
		"test:ci": "bun run ci:quality && bun run check:types && bun run build",
		"taze": "taze",
		"taze:check": "taze -r",
		"taze:apply": "taze -r --write --install",
		"taze:ci": "taze -r --write --install",
		"taze:prod": "taze -r --include prod --write --install",
		"secrets:scan": "npx gitleaks detect --config .gitleaks.toml --verbose",
		"secrets:setup": "cp .dev.vars.example .dev.vars && echo 'âœ… Created .dev.vars from example. Please fill with real values.'",
		"secrets:production": "echo 'ðŸš€ Deploy secrets to production:' && echo 'wrangler secret put DATABASE_URL' && echo 'wrangler secret put JWT_SECRET' && echo 'wrangler secret put EXTERNAL_API_KEY'",
		"secrets:list": "wrangler secret list",
		"gitleaks": "bunx gitleaks detect -v",
		"prepare": "lefthook install && panda codegen",
		"commit": "cz",
		"prune": "rimraf --glob 'node_modules' 'bun.lock' '.astro' 'dist'"
	},
	"dependencies": {
		"@astrojs/check": "^0.9.6",
		"@astrojs/cloudflare": "^12.6.12",
		"@astrojs/mdx": "^4.3.13",
		"@astrojs/rss": "^4.0.14",
		"@astrojs/ts-plugin": "^1.10.6",
		"@builder.io/qwik": "^1.17.2",
		"@pandacss/studio": "^1.7.1",
		"@qwikdev/astro": "^0.8.2",
		"astro": "^5.16.5",
		"dayjs": "^1.11.19",
		"hast-util-to-string": "^3.0.1",
		"reading-time": "^1.5.0",
		"ultrahtml": "^1.6.0",
		"uuid": "^13.0.0"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.11",
		"@commitlint/cli": "^20.2.0",
		"@pandacss/dev": "^1.7.1",
		"@qwik-ui/headless": "^0.7.4",
		"@types/bun": "^1.3.4",
		"@types/node": "^24.10.4",
		"commitizen": "^4.3.1",
		"cz-git": "^1.12.0",
		"dpdm": "^3.14.0",
		"globals": "^16.5.0",
		"lefthook": "^2.0.11",
		"rimraf": "^6.1.2",
		"taze": "^19.9.2",
		"validate-branch-name": "^1.3.2",
		"wrangler": "^4.54.0"
	},
	"config": {
		"commitizen": {
			"path": "node_modules/cz-git"
		}
	},
	"validate-branch-name": {
		"pattern": "^(main|develop){1}$|^(feat|fix|hotfix|release|chore)/.+$",
		"errorMsg": "Branch name is invalid, please rename your current branch"
	},
	"engines": {
		"node": ">=24.12.0",
		"bun": ">=1.3.2",
		"npm": "please-use-bun",
		"yarn": "please-use-bun",
		"pnpm": "please-use-bun"
	},
	"packageManager": "bun@1.3.2",
	"volta": {
		"node": "24.12.0",
		"bun": "1.3.2"
	},
	"resolutions": {
		"entities": "^4.5.0",
		"@vue/compiler-core": "3.5.25",
		"@vue/compiler-dom": "3.5.25",
		"@vue/compiler-sfc": "3.5.25",
		"@vue/runtime-core": "3.5.25",
		"@vue/shared": "3.5.25",
		"estree-walker": "2.0.2",
		"parse5": "7.2.1"
	}
}
