{
	"extends": "astro/tsconfigs/strict",
	"include": [".astro/types.d.ts", "**/*", "styled-system"],
	"exclude": ["dist"],
	"compilerOptions": {
		"types": ["./worker-configuration.d.ts", "node"],
		// To enforce type imports
		"verbatimModuleSyntax": true,
		"jsx": "react-jsx",
		"jsxImportSource": "@builder.io/qwik",
		"plugins": [
			{
				"name": "@astrojs/ts-plugin"
			}
		],
		"paths": {
			"@asset/*": ["./src/asset/*"],
			"@ui/*": ["./src/ui/*"],
			"@content/*": ["./src/content/*"],
			"@config/*": ["./src/config/*"],
			"@data/*": ["./src/data/*"],
			"@hook/*": ["./src/hook/*"],
			"@lib/*": ["./src/lib/*"],
			"@layout/*": ["./src/layout/*"],
			"@style/*": ["./src/style/*"],
			"@styled-system/*": ["./styled-system/*"],
			// Optional
			"@theme/*": ["./src/theme/*"],
			"@plugin/*": ["./plugin/*"]
		}
	}
}
