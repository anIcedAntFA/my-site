<BaseLayout title="Blog - ngockhoi96">
	<div class={cx(container(), 'blog-page')}>
		<header class="blog-header">
			<h1>Latest Articles</h1>
			<p>Thoughts on web development, programming, and technology</p>
		</header>

		<section class="post-grid" aria-label="Blog articles">
			{
				articles.slice(0, 1).map((article) => (
					<PostCard {...article} tags={article.tags as TagVariant[]} />
				))
			}
		</section>

		<nav class="blog-navigation" aria-label="Blog navigation">
			<a href="/blog/my-go-to-css-pseudo-element-use-cases">
				My Go-To CSS Pseudo-Element Use Cases
			</a>
		</nav>
	</div>
</BaseLayout>

<style>
	.blog-page {
		padding-block: rem(32px);
	}

	.blog-header {
		margin-block-end: rem(48px);
		text-align: center;
	}

	.blog-header h1 {
		margin-block-end: rem(12px);
		color: var(--clr-text-primary);
		font-size: var(--fs-2xl);
		font-weight: var(--fw-bold);
	}

	.blog-header p {
		color: var(--clr-text-muted);
		font-size: var(--fs-lg);
	}

	.post-grid {
		display: grid;
		/* grid-template-columns: repeat(3, 1fr); */
		gap: 1.5rem;
		margin-block-end: 3rem;
	}

	/* Tablet and smaller desktop - 2 columns */
	@media (--xl) {
		.post-grid {
			grid-template-columns: repeat(2, 1fr);
			gap: rem(32px);
		}

		.blog-header {
			margin-block-end: rem(36px);
		}
	}

	@media (--lg) {
		.post-grid {
			gap: rem(24px);
		}
		.blog-header {
			margin-block-end: rem(24px);
		}
	}

	/* Mobile - 1 column */
	@media (--md) {
		.post-grid {
			grid-template-columns: 1fr;
			gap: rem(20px);
		}

		.blog-page {
			padding-block: rem(24px);
		}

		.blog-header {
			margin-block-end: rem(24px);
		}

		.blog-header h1 {
			font-size: var(--fs-xl);
		}

		.blog-header p {
			font-size: var(--fs-md);
		}
	}

	/* Small screens */
	@media (--sm) {
		.post-grid {
			gap: rem(16px);
		}
	}

	.blog-navigation {
		text-align: center;
		padding-block-start: rem(24px);
		border-top: 1px solid var(--clr-border);
	}

	.blog-navigation a {
		color: var(--clr-primary);
		text-decoration: none;
		font-weight: var(--fw-medium);
		transition: color var(--td-normal);
	}

	.blog-navigation a:hover {
		color: var(--clr-primary-hover);
		text-decoration: underline;
	}
</style>
